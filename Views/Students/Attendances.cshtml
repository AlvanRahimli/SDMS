@{
    Layout = "_Layout";
    var attendances = (ViewBag.Attendances as List<Absence>);
}
<div class="container">
    @if(attendances.Count == 0)
    {
        <div class="alert alert-warning" role="alert">
            No records found
        </div>
    }
    <table class="table table-stripped" style="width: 50%;">
        <thead>
            <tr>
                <td>No</td>
                <td scope="col">Score</td>
                <td scope="col">Course</td>
                <td scope="col">Date</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < attendances.Count; i++)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@attendances[i].DateTime.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>