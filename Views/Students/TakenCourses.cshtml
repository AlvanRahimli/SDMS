@{
    Layout = "_Layout";
}
@model List<SDMS.Models.Dtos.CourseReturnDto>
<div class="container">
    @for (int i = 0; i < Model.Count; i += 4)
    {
        <div class="row">
            @for (int j = i; j < 4 && j < Model.Count; j++)
            {
                <div class="card" style="width: 18rem; margin-left: 20px;">
                    <div class="card-body">
                        <h5 class="card-title">Name: @Model[j].Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            Credit: <strong>@Model[j].Credit</strong>
                            Absence limit: <strong>@Model[j].AbsenceLimit</strong>
                        </h6>
                        <a href="@Model[j].SyllabusPath" class="card-link">Syllabus</a>
                        <a href="#" class="card-link">@Model[j].Teacher.Name</a>
                        <a href="#" class="card-link">Go to course info</a>
                    </div>
                </div>
            }
        </div>
    }
</div>